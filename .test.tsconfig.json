{
    "compilerOptions": {
        "module": "commonjs",
        "outDir":"./dist/__tests__/",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target":"ES2020",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "jsx": "react",
        "declaration": true
    },
    "include": [
        "**/*.spec.tsx", "**/*.tsx", "test-fixtures/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "types": ["node"]
}
